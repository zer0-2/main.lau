function digIt()
    while turtle.detect() do
        turtle.dig()
        os.sleep(0.5)
    end
    turtle.forward()
    while turtle.detectDown() or turtle.detectUp() do
        turtle.digUp()
        turtle.digDwon()    
    end
end

local run = 0

term.write("Branch length:")
run = read()

for i = 1, run do 
    digIt()
end

turtle.down()
